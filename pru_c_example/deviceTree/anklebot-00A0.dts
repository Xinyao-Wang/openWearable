/dts-v1/;
/plugin/;

/ {
  compatible = "ti,beaglebone", "ti,beaglebone-black";

  /* identification */
  part-number = "ANKLEBOT";
  version = "00A0";

  /* state the resources this cape uses */
  exclusive-use =
    /* the pin header uses */
    "P9.31",  /* pr1_pru0_pru_r30_0 - debug pin */
    "P8.45",  /* pr1_pru1_pru_r30_0 - debug pin */
    /* the hardware IP uses */
    "pru0",
    "pru1";

  fragment@0 {
    target = <&am33xx_pinmux>;
    __overlay__ {

      pruss_pins: pinmux_pruss_pins {
        pinctrl-single,pins = <
          0x190 0x0d  /* pr1_pru0_pru_r30_0, MODE5 | OUTPUT | DIS */
          0x0A0 0x0d  /* pr1_pru1_pru_r30_0, MODE5 */
        >;
      };
    };
  };

  fragment@1 {
    target = <&pruss>;
    __overlay__ {
      status = "okay";
      pinctrl-names = "default";
      pinctrl-0 = <&pruss_pins>;
    };
  };
};
